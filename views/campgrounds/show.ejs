<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Yelp Camp</p>
			<div class="list group">
				<list class="list-group-item active">Info 1</list>
				<list class="list-group-item">Info 2</list>
				<list class="list-group-item">Info 3</list>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= campground.image %>">
				<div class="caption-full">
					<h4 class="pull-right">$<%= campground.price.toFixed(2) %>/night</h4>
					<h4><a><%= campground.name %></a></h4>
					<p><%- campground.description %></p>
					<p>
						<em>Submitted by <%= campground.author.username %>, <%= moment(campground.createdAt).fromNow() %></em>
					</p>
					<div>
						<% if(currentUser && (campground.author.id.equals(currentUser._id) || currentUser.admin)){ %>
							<a class='btn btn-warning' href='/campgrounds/<%= campground._id %>/edit/'>Edit</a>
							<form class='inline-buttons' action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
								<div class='form-group inline-buttons'>
									<button class='btn btn-danger'>Delete</button>
								</div>
							</form>
						<% } %>
					</div>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-primary pull-right" role="button">Add new comment</a>
				</div>
				<hr>
				<div>
					<% campground.comments.forEach(function(comment){ %>
					<div class="row">
						<div class="col-md-12">
							<p><strong><%= comment.author.username %></strong></p>
							<span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
							<span><%=comment.text %></span>
							<% if(currentUser && (comment.author.id.equals(currentUser._id) || currentUser.admin)){ %>
							<div class='inline-buttons'>
								<a class='btn btn-xs btn-warning' href='/campgrounds/<%= campground._id %>/comments/edit/<%= comment._id %>'>edit</a>
								<form class='inline-buttons' action='/campgrounds/<%= campground._id %>/comments/edit/<%= comment._id %>?_method=DELETE' method="POST">
									<div class='form-group inline-buttons'>
										<button class="btn btn-xs btn-danger">Delete</button>
									</div>
								</form>
							</div>
							<% } %>
						</div>
					</div>
					<br>
					<% }); %>
				</div>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>