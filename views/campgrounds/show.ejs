<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead"><%= campground.name %></p>
			<div class="list-group">
				<list class="list-group-item active">Overview</list>
				<list class="list-group-item"><a href='/campgrounds/<%= campground._id %>/photos'>Photos</a></list>
				<list class="list-group-item"><a href='/campgrounds/<%= campground._id %>/comments'>Comments</a></list>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= campground.image %>">
				<div class="caption-full">
					<h4 class="pull-right">$<%= campground.price.toFixed(2) %>/night</h4>
					<h4 class='camp-thumb-name'><%= campground.name %></h4>
					<p>
						<i><%- campground.location %></i>
					</p>
					<p><%- campground.description %></p>
					<p>
						<em>Submitted by <%= campground.author.username %>, <%= moment(campground.createdAt).fromNow() %></em>
					</p>
					<div>
						<% if(currentUser && (campground.author.id.equals(currentUser._id) || currentUser.admin)){ %>
							<a class='btn btn-warning' href='/campgrounds/<%= campground._id %>/edit/'>Edit</a>
							<form class='inline-buttons' action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
								<div class='form-group inline-buttons'>
									<button class='btn btn-danger'>Delete</button>
								</div>
							</form>
						<% } %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>