<% include ../partials/header %>

<!-- NEW PHOTO FORM -->

<div class="container">
	<h1 style="text-align: center">New photo for <%= campground.name %>:</h1>
	<div style="width: 30%; margin: 0 auto;">
		<form action="/campgrounds/<%= campground._id %>/photos" method="POST">
			<div class="form-group">
				<input type='text' class="form-control" placeholder="Link to image" name="photo[src]">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Post</button>
			</div>
		</form>
		<a href="/campgrounds/<%= campground._id %>">Go Back</a>
	</div>
</div>

<% include ../partials/footer %>