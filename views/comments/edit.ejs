<% include ../partials/header %>

<!-- EDIT COMMENT FORM -->

<div class="container">
	<h1 style="text-align: center">Edit <%= currentUser.username %>'s comment for <%= campground.name %>:</h1>
	<div style="width: 30%; margin: 0 auto;">
		<form action="/campgrounds/<%= campground._id %>/comments/edit/<%= comment._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input class="form-control" type='hidden' value="<%= currentUser.username %>" name="comment[author]" readonly=true>	
			</div>
			<div class="form-group">
				<textarea class="form-control" name="comment[text]"><%= comment.text %></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-success btn-block">Save</button>
			</div>
		</form>
		<a href="/campgrounds/<%= campground._id %>">Go Back</a>
	</div>
</div>

<% include ../partials/footer %>